@{
  Layout = "_Layout";
}

@model Capstone.Models.Employee

<h2>Add a Employee</h2>

<h4>Add a Service to this Employee: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EmployeeId)

    @Html.Label("Select service")
    @Html.DropDownList("ServiceId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>