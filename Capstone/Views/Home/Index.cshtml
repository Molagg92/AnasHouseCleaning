<h4>Employees</h4>
@if (Model["employees"].Length == 0)
{
  <p>No employees have been added yet!</p>
} 
<ul>
  @foreach (Employee emp in Model["employees"])
  {
    <li>@Html.ActionLink(@emp.Name, "Details", "Employee", new { id = @emp.EmployeeId})</li>
  }
</ul>

