@{
    Layout = "_Layout";
}

@model Capstone.Models.Service

<h2>Service Details</h2>
<hr />
<h3>@Html.DisplayFor(model => model.Name)</h3>

@if (Model.ServiceEmployeeEntities.Count == 0)
{
    <b>--No Employees have been added to this Service yet--</b>
}
else
{
    <h4>Employees:</h4>
    <ul>
        @foreach (var join in Model.ServiceEmployeeEntities)
        {
            <li>Employee: @join.Employee.Name -</li>
            @using (Html.BeginForm("DeleteJoin", "Service"))
            {
                @Html.Hidden("joinId", @join.ServiceEmployeeEntityId)
                <input type="submit" value="Delete" />
            }
        }
    </ul>
}
<hr />

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Edit Service", "Edit", new { id = Model.ServiceId })</p>
<p>@Html.ActionLink("Delete Service", "Delete", new { id = Model.ServiceId })</p>
<p>@Html.ActionLink("Add an Employee", "AddEmployee", new { id = Model.ServiceId })</p>
