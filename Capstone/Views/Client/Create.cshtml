@{
  Layout = "_Layout";
}
@model Capstone.Models.Client

<h4>Add a new Client</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  <input type="submit" value="Add new Client" />
}
<p>@Html.ActionLink("Show all clients", "Index")</p>